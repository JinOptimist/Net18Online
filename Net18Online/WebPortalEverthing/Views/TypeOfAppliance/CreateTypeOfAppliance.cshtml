@using WebPortalEverything.Models.ServiceCenter
@model TypeOfApplianceCreationViewModel

@{
    Layout = "~/Views/Shared/_LayoutServiceCenter.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <div>
        @Html.TextBoxFor(x => x.Name, new { placeholder = "Введите имя" })
    </div>
    <div>
        <label for="imageFile">Выберите изображение:</label>
        <input type="file" name="imageFile" id="imageFile" accept="image/*" />
    </div>
    <button type="submit">Создать</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="validation-summary-errors">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
