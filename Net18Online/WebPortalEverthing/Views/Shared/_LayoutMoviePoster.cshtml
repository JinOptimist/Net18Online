@using WebPortalEverthing.Localizations
<!DOCTYPE html>
<html>

<head>
    <title>Movie Poster</title>
    <link href="~/css/MoviePoster/reset.css" rel="stylesheet" />
    <link href="~/css/MoviePoster/style.css" rel="stylesheet" />
    <link href="~/css/MoviePoster/button.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", false)
</head>

<body>
    <header class="page-header">
        <div class="logo">
            <img src="~/images/MoviePoster/logo.webp" alt="logo" />
        </div>
        <div class="name">Movie Poster</div>
        <div class="profile-block">
            <button class="logout">Login</button>
            <a href="/MoviePoster/Profile">
                Профиль
            </a>
        </div>
    </header>
    <div class="menu">
        <ul class="kinds-of-films">
            <li><a class="smile-button" href="#">@MoviePoster.The_Whole_Poster_Text</a></li>
            <li><a class="smile-button" href="#">@MoviePoster.Romantic_Сomedy_Text</a></li>
            <li><a class="smile-button" href="#">@MoviePoster.Science_Fiction_Text</a></li>
            <li><a class="smile-button" href="#">@MoviePoster.Horror_Text</a></li>
            <li><a class="smile-button" href="#">@MoviePoster.Documentary_Text</a></li>
            <li><a class="smile-button" href="#">@MoviePoster.Animation_Text</a></li>
            <li><a class="smile-button" href="#">@MoviePoster.Thriller_Text</a></li>
            <li><a class="smile-button" href="#">@MoviePoster.Drama_Text</a></li>
            <li><a class="smile-button" href="#">@MoviePoster.Comedy_Text</a></li>
            <li><a class="smile-button" href="#">@MoviePoster.Adventures_Text</a></li>
        </ul>
    </div>
    <div class="navigation-menu">
        <ul class="navigation">
            <li><a class="menu-button" href="/">Главная страница сайта</a></li>
            <li><a class="menu-button" href="/MoviePoster">Начальная страница афиши</a></li>
            <li><a class="menu-button" href="/MoviePoster/AllPosters">Все фильмы</a></li>
            <li><a class="menu-button" href="/MoviePoster/CreatePoster">Создать</a></li>
            <li><a class="menu-button" href="/MoviePoster/ShowCountWithFirstAndLastElementInDb">Запрос в Базу Данных</a></li>
            <li><a class="menu-button" href="/FilmDirector">Все режиссеры</a></li>
            <li><a class="menu-button" href="/FilmDirector/Create">Ввести режиссера</a></li>
        </ul>
    </div>
    <div class="content">
        @RenderBody()
    </div>
</body>

</html>