<!DOCTYPE html>
<html>

<head>
    <title>Anime Catalogue</title>
    <link href="~/css/AnimeCatalog/reset.css" rel="stylesheet" />
    <link href="~/css/AnimeCatalog/style.css" rel="stylesheet" />
    @RenderSection("TagSection", false)
</head>

<body>
    <header class="page-header">
        <div class="logo">
            <img src="~/images/AnimeCatalog/logo.png" alt="logo" />
        </div>
        <div class="name">Anime Catalog</div>
        <div class="profile-block">
            <img src="~/images/AnimeCatalog/person.webp" alt="" class="avatar" />
        </div>
    </header>
    <div class="menu-plus-content">
        <div class="menu custom-list">
            <ul>
                <li><label><input type="radio" name="Anime"> Isekai</label></li>
                <li><label><input type="radio" name="Anime"> Fighting</label></li>
                <li><label><input type="radio" name="Anime"> Novel</label></li>
                <li><a class="" href="/AnimeCatalog/TagGame">TagGame</a></li>
            </ul>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>

</html>