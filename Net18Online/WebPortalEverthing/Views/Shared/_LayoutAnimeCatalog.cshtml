@using WebPortalEverthing.Localizations

<!DOCTYPE html>
<html>

<head>
    <title>Anime Catalog</title>
    <link href="~/css/AnimeCatalog/reset.css" rel="stylesheet" />
    <link href="~/css/AnimeCatalog/style.css" rel="stylesheet" />
    @RenderSection("Reviews", false)
</head>

<body>
    <header class="page-header">
        <div class="logo">
            <img src="~/images/AnimeCatalog/logo.png" alt="logo" />
        </div>
        <div class="name">Anime Catalog</div>
        <div class="profile-block">
            <img src="~/images/AnimeCatalog/person.webp" alt="" class="avatar" />
        </div>
    </header>
    <div class="menu-plus-content">
        <div class="menu custom-list">
            <ul>
                <li><a href="/">@AnimeCatalog.AnimeMainPage_LinkText</a></li>
                <li><a href="/AnimeCatalog">@AnimeCatalog.AnimeMainPage_LinkText</a></li>
                <li><a href="/AnimeCatalog/Create">@AnimeCatalog.AnimeCreate_LinkText</a></li>
                <li><a href="/AnimeCatalog/GetShortestReview">@AnimeCatalog.AnimeShortestReviews_LinkText</a></li>
                <li><a href="/AnimeReview">@AnimeCatalog.AnimeReviews_LinkText</a></li>
            </ul>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>

</html>