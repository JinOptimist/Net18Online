@model WebPortalEverthing.Models.AnimeDescription.CreateAnimeDescriptionViewModel

@{
    Layout = "~/Views/Shared/_LayoutAnimeCatalog.cshtml";
}

<form method="post">
    <div>
        @Html.TextBoxFor(x => x.Name, new { placeholder = "Введи название" })
    </div>
    <div>
        @Html.TextBoxFor(x => x.Description, new { placeholder = "Введи описание" })
    </div>
    <button type="submit">Создать</button>
</form>