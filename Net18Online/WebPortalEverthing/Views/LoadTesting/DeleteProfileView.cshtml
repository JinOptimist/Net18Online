@using WebPortalEverthing.Models.LoadTesting
@model MetricViewModel

@{
    Layout = "~/Views/Shared/LoadTesting/_LayoutLoadTesting.cshtml";
}


<form method="post">
    <div class="create-profile-form">
        <div class="title">Введите Guid профайла</div>
        <div class="input-container">
            @Html.TextBoxFor(m => m.Guid, new { placeholder = "Guid" })
            <button type="submit">Delete by Guid</button>
            <a href="/LoadTesting/Remove?Guid=@Model.Guid">Delete</a>
        </div>
    </div>
</form>