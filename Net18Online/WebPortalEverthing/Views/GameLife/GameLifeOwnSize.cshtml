@model WebPortalEverthing.Models.LoadTesting.GameLife.FieldViewModel

@{
    Layout = "~/Views/Shared/LoadTesting/_LayoutLoadTesting.cshtml";
}
<div class="form-container">
    <form method="post">
        <input class="input-field" name="width" type="number" placeholder="Ширина" />
        <input class="input-field" name="height" type="number" placeholder="Высота" />
        <button class="button" type="submit"><span>Start Game</span></button>
    </form>
</div>

@if( Model != null )
{
    <div class="game-life">
        <div class="game-life-title">Game "Life"</div>
        <div id="game-life-field" class="game-life-field">
            @for( int i = 0 ; i < Model.Rows ; i++ )
            {
                <div class="row">
                    @for( int j = 0 ; j < Model.Cols ; j++ )
                    {
                        <span class="cell @(Model.Cells[i, j].IsAlive ? "alive" : "")">
                            @(Model.Cells[i, j].IsAlive ? "+" : "-")
                        </span>
                    }
                </div>
            }
        </div>
    </div>
} else
{
    <div>Empty Game</div>
}