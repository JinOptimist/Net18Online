@model WebPortalEverthing.Models.Ecology.PostCreationViewModel

<form method="post" action="/Ecology/EcologyChat" onsubmit="closeModal()">
    <div>
        <label for="imageUrl">Enter image URL:</label>
        <input type="text" id="imageUrl" name="Url" value="@Model.Url" />
        @Html.ValidationMessageFor(model => model.Url)
    </div>
    <div>
        <label asp-for="ImageFile">Upload Image</label>
        <input type="file" asp-for="ImageFile" />
        @Html.ValidationMessageFor(model => model.ImageFile)
    </div>
    @if (ViewData.ModelState["Url"]?.Errors.Count > 0 || ViewData.ModelState["ImageFile"]?.Errors.Count > 0)
    {
    <div class="text-danger">
        <span>Please provide either an image URL or upload an image, not both.</span>
    </div>
    }
    <div>
        <label for="imageText">Enter text:</label>
        <input type="text" id="imageText" name="Text" value="@Model.Text" />
        @Html.ValidationMessageFor(model => model.Text)
    </div>
    <button type="submit">Submit</button>
</form>