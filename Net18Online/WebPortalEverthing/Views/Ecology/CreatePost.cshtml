@model WebPortalEverthing.Models.Ecology.PostCreationViewModel

@{
    Layout = "~/Views/Shared/_LayoutEcology.cshtml";
}

<form method="post">
    <div>
        @Html.TextBoxFor(x => x.PostText, new { placeholder = "Enter text of post" })
    </div>
    <div>
        @Html.TextBoxFor(x => x.Url, new { placeholder = "Enter roud of picture" })
    </div>
    <button type="submit">Create</button>
</form>