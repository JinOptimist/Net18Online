@using WebPortalEverthing.Models.Ecology
@model List<EcologyViewModel>

@{
    Layout = "~/Views/Shared/_LayoutEcology.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/css/Ecology/style.css">

<div class="ecologies">
    <form method="post" action="/Ecology/EcologyChat">
        <label for="imageUrl">Entet image URL:</label>
        <input type="text" id="imageUrl" name="Url" />
        <div>
            <label for="imageText">Enter text:</label>
            <input type="text" id="imageText" name="Text" />
        </div>
        <button type="submit">Submit</button>
    </form>
</div>

@if (Model != null && Model.Count > 0)
{
<ul>
    @foreach (var item in Model)
    {
    <li>
        <div class="post-header">
            <img src="@item.UserAvatar" alt="User Icon" class="user-icon" />
            <span>@item.UserName</span>
        </div>
        <img src="@item.ImageSrc" class="post" alt="Picture"/>
        <p>@item.Texts.FirstOrDefault()</p>

        @if (User.Identity.Name == @item.UserName)
        {
        <div class="post-actions">
            <span class="dots">•••</span>
            <div class="actions-menu">
                <a href="@Url.Action("UpdatePost", new { id = item.PostId, url = item.ImageSrc, text = item.Texts.FirstOrDefault() })">Edit</a>
                <a asp-action="Remove" asp-route-id="@item.PostId" onclick="return confirm('Are you sure you want to delete this post?');">Delete</a>
            </div>
        </div>
        }

        <div class="comments">
            <h4>Comments</h4>
            @foreach (var comment in item.Comments)
            {
            <div class="comment">
                <img src="@comment.UserAvatar" alt="User Icon" class="user-icon" />
                <span>@comment.UserName</span>
                <p>@comment.CommentText</p>
            </div>
            }
            <form method="post" action="/Ecology/AddComment">
                <input type="hidden" name="postId" value="@item.PostId" />
                <textarea name="commentText" placeholder="Enter your comment"></textarea>
                <button type="submit">Add Comment</button>
            </form>
        </div>
    </li>
    }
</ul>
}

<div id="editForm" style="display:none;">
    <form method="post" action="/Ecology/UpdatePost">
        <input type="hidden" id="editId" name="Id" />
        <label for="editImageUrl">Edit image URL:</label>
        <input type="text" id="editImageUrl" name="Url" />
        <div>
            <label for="editImageText">Edit text:</label>
            <input type="text" id="editImageText" name="Text" />
        </div>
        <button type="submit">Save changes</button>
    </form>
</div>

<script>
    function showEditForm(id, url, text) {
        document.getElementById("editId").value = id;
        document.getElementById("editImageUrl").value = url;
        document.getElementById("editImageText").value = text;
        document.getElementById("editForm").style.display = "block";
    }
</script>
