@{
    int? count = ViewBag.Count;
}

@for (int i=0; i< count; i++)
{
    <div>
        <div>
            <img src="~images/Ecology/renewable.JPG" alt="Image 1"/>
            <p>Using renewable energy will reduce carbon emissions</p>
        </div>
        <div>
            <img src="~images/Ecology/bicycle.JPG" alt="Image 1"/>
