@using WebPortalEverthing.Models.MoviePoster.Profile

@model ProfileViewModel

@{
    Layout = "~/Views/Shared/_LayoutMoviePoster.cshtml";
}

<div>
    <h1>@Model.UserName</h1>
</div>

<div class="filmDirectors">
    FilmDirector:
    @foreach (var filmDirector in Model.FilmDirectors)
    {
        <span class="@(filmDirector.IsCreatedWithMovies ? "special" : "")">@filmDirector.Name</span>
    }
</div>
<div>
    Movies:
    <div class="movies">
        @foreach (var movie in Model.Movies)
        {
            <div class="movie">
                <div class="name">@movie.Name</div>
                <div class="image-container">
                    <img src="@movie.Url" alt="movie" />
                </div>
            </div>
        }
    </div>
</div>